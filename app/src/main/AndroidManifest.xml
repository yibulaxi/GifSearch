<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.allever.app.gif.memes">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name="com.allever.app.gif.memes.app.MyApp"
        android:allowBackup="false"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FullScreenStyle"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.allever.app.gif.memes.ui.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.allever.app.gif.memes.ui.main.GifMainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.allever.app.gif.memes.ui.search.SearchActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name="com.allever.app.gif.memes.ui.GifPreviewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name="com.allever.app.gif.memes.ui.BackupRestoreActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name="com.allever.app.gif.memes.ui.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.allever.app.gif.memes.ui.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.allever.app.gif.memes.ui.AboutActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.allever.app.gif.memes.ui.user.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.allever.app.gif.memes.ui.user.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.allever.app.gif.memes.ui.user.UserCenterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.allever.app.gif.memes.ui.maker.PickActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.allever.app.gif.memes.ui.maker.GifMakerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.allever.app.gif.memes.ui.GifFunDebugActivity"/>

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="${UMENG_APP_KEY}" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="${ADMOB_APP_ID}"/>
    </application>

</manifest>